{
  "ci": {
    "collect": {
      "url": ["http://localhost:3000"], 
      "numberOfRuns": 3,
      "startServerCommand": "npm start",
      "startServerReadyPattern": "Compiled successfully"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.7 }],
        "categories:accessibility": ["error", { "minScore": 0.8 }],
        "categories:best-practices": ["error", { "minScore": 0.8 }],
        "categories:seo": ["error", { "minScore": 0.85 }],
        "first-contentful-paint": ["error", { "minScore": 0.6 }],
        "largest-contentful-paint": ["error", { "minScore": 0.7 }],
        "total-blocking-time": ["error", { "maxScore": 300 }],
        "cumulative-layout-shift": ["error", { "maxScore": 0.1 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}